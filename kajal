import paramiko

# Connection details
hostname = "example.com"
port = 22
username = "your_username"
password = "your_password"

# Create SSH client
ssh = paramiko.SSHClient()
ssh.set_missing_host_key_policy(paramiko.AutoAddPolicy())

# Connect to server
ssh.connect(hostname, port, username, password)

# Open SFTP session
sftp = ssh.open_sftp()

# Upload a document
sftp.put("local_document.pdf", "/remote/path/document.pdf")

# Download a document
sftp.get("/remote/path/report.docx", "local_report.docx")

# List files in a remote directory
for file in sftp.listdir("/remote/path/"):
    print(file)

# Close SFTP and SSH
sftp.close()
ssh.close()
