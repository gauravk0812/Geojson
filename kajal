protected async onSelectCountry(event: MatAutocompleteActivatedEvent) {
    try {
      this.showLoader();
      this.clearInput('CompanyCode');
      this.selectCountry = this.filteredCountryName.filter(
        ({ Name }) => Name == event.option?.value
      );
      if (
        !Utils.isEmptyArray(this.selectCountry) &&
        this.selectCountry[0].Code
      ) {
        this.customerForm
          .get('CompanyIsoCountryCode')
          ?.setValue(this.selectCountry[0].Code);
      }
      this.companyList = [];
      this.filteredCompanyName = [];
      if (this.customerForm.get('SourceErp')?.value) {
        this.loadCompaniesAutoCompleteFilter();
      }
    } catch (ex: unknown) {
      this.updateErrorFromException(ex);
    } finally {
      this.hideLoader();
    }
  }
